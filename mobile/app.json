{
  "expo": {
    "name": "EduScan",
    "slug": "eduscan",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "eduscan",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#4F46E5"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "org.name.EduScan",
      "infoPlist": {
        "NSCameraUsageDescription": "EduScan needs camera access to scan homework problems.",
        "NSPhotoLibraryUsageDescription": "EduScan needs photo library access to select problem images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#4F46E5"
      },
      "package": "com.eduscan.app",
      "permissions": ["android.permission.CAMERA"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow EduScan to access your camera to scan problems."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow EduScan to access your photos to select problem images."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
