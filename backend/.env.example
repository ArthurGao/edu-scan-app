# Application
APP_NAME=EduScan
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/eduscan

# Redis
REDIS_URL=redis://localhost:6379/0

# AI Providers
ANTHROPIC_API_KEY=your-claude-api-key
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-gemini-api-key

# Default AI Provider: claude, gpt, gemini
DEFAULT_AI_PROVIDER=claude

# OCR Provider: baidu, google, tesseract
OCR_PROVIDER=google
GOOGLE_CLOUD_CREDENTIALS_PATH=./credentials/google-cloud.json

# Baidu OCR (if using)
BAIDU_OCR_APP_ID=
BAIDU_OCR_API_KEY=
BAIDU_OCR_SECRET_KEY=

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-southeast-2
S3_BUCKET_NAME=eduscan-images

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:19006"]
